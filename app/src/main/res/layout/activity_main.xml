<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Goal Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goal_label"
        android:textSize="25sp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/goalEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/goal_hint"
        android:inputType="numberDecimal"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/setGoalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_goal_button"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/goalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_goal_label"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Action Buttons -->
    <Button
        android:id="@+id/addPieceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_piece_button"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/checkInButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_in_button"
        android:layout_marginBottom="16dp" />

    <!-- Pieces List -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pieces_label"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/piecesListView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp" />

    <!-- Check-ins List -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_ins_label"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/checkInsListView"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

</LinearLayout>